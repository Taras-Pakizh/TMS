<Window x:Class="TMS.Client.Windows.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS.Client.Windows"
        mc:Ignorable="d"
        Title="Task" Height="450" Width="800" Loaded="Window_Loaded">

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TMS.Client;component/Windows/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Window.Resources>

    <StackPanel>

        <Label Content="Task" HorizontalAlignment="Center" Margin="0, 20" FontSize="20"/>

        <StackPanel Orientation="Horizontal">

            <Label Content="Project: " Foreground="Yellow"/>
            
            <Label Name="Label_Project"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal">

            <Label Content="Hours: " Foreground="Yellow"/>
            
            <Label Name="Label_Effort" />

        </StackPanel>
        
        <Label Content="Description: " Foreground="Yellow"/>
        
        <TextBlock Name="TextBlock_Description" />

    </StackPanel>
    
</Window>
