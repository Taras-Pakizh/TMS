<UserControl x:Class="TMS.Client.Project_Manager.Views.DialogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMS.Client.Project_Manager.Views"
             mc:Ignorable="d" 
             Height="275" Width="335">
    <Grid Background="LawnGreen">
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="115,60,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="22"/>
        <TextBox HorizontalAlignment="Left" Name="Value" Height="28" Margin="70,110,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="185" FontSize="18"/>
        <Button Content="OK" Name="OK" HorizontalAlignment="Left" Margin="80,195,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="170,195,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
